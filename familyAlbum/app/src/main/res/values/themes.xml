<resources>
    <!-- Base application theme. -->
    <style name="Theme.FamilyAlbum" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_gray</item>
        <item name="colorPrimaryVariant">@color/maize_yellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Pumpkin</item>
        <item name="colorSecondaryVariant">@color/Vermilion_red</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:font">@color/font_darkgray</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>
</resources>