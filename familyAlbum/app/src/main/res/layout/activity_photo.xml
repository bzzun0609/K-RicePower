<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.PostingActivity">


    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/photo_frame"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:src="@drawable/chatting_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="40dp"/>

    <ImageView
        android:id="@+id/photo_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="@id/photo_frame"
        app:layout_constraintStart_toStartOf="@id/photo_frame"
        app:layout_constraintEnd_toEndOf="@id/photo_frame"
        android:layout_marginTop="20dp"
        android:src="@drawable/testimg"/>

    <TextView
        android:id="@+id/photo_text"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="여기에 텍스트를 입력하세요."
        app:layout_constraintTop_toBottomOf="@id/photo_view"
        app:layout_constraintStart_toStartOf="@id/photo_frame"
        app:layout_constraintEnd_toEndOf="@id/photo_frame"
        app:layout_constraintBottom_toBottomOf="@id/photo_frame"/>

    <ImageView
        android:id="@+id/btn_delete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_trash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>