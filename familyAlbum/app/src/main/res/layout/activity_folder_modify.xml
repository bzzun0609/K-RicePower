<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.FolderCreateActivity">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textview_layout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="폴더 수정"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_back"
        android:layout_margin="20dp"/>
    <ImageView
        android:id="@+id/imageview_layout_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_albums"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/textview_layout_title"
        app:layout_constraintStart_toEndOf="@id/textview_layout_title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="우리 가족과 함께한 시간을 폴더로 만들어보세요."
        app:layout_constraintTop_toBottomOf="@id/textview_layout_title"
        app:layout_constraintStart_toStartOf="@id/textview_layout_title"/>


    <LinearLayout
        android:id="@+id/layout_folder_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/textview_layout_title"
        android:layout_marginTop="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/textview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/lineseed_kr_rg"
            android:textColor="@color/black"
            android:text="폴더 이름"/>

        <EditText
            android:id="@+id/editFolderName"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:hint="폴더 이름을 입력하세요"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_folder_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout_folder_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/textview_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/lineseed_kr_rg"
            android:textColor="@color/black"
            android:text="폴더 설명"/>

        <EditText
            android:id="@+id/editFolderDescription"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:hint="ex) 2022.03.04, 동생과 함께" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_folder_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout_folder_description"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/textview_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/lineseed_kr_rg"
            android:text="사진 선택 "/>

        <ImageView
            android:id="@+id/folder_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/circle"
            app:tint="@color/gray"/>
        <ImageView
            android:id="@+id/modify_folder_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:src="@drawable/baseline_add_a_photo_24"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_folder_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="폴더 수정"
        android:background="@drawable/chatting_bottom"
        android:backgroundTint="@color/cardview_dark_background"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_folder_delete"
        app:layout_constraintTop_toBottomOf="@id/layout_folder_image"
        android:layout_marginTop="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_folder_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="폴더 삭제"
        android:background="@drawable/chatting_bottom"
        android:backgroundTint="@color/cardview_dark_background"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/btn_folder_modify"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_folder_image"
        android:layout_marginTop="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>