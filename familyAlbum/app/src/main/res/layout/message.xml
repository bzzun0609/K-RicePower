<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:id="@+id/linear">

    <ImageView
        android:id="@+id/receive_message_img"
        android:paddingTop="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:src="@drawable/baseline_account_circle_24"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/receive_message"
        android:layout_marginTop="2dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:padding="2dp"
        android:elevation="5dp"
        android:outlineSpotShadowColor="@color/font_darkgray">
        <TextView
            android:id="@+id/receive_message_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:text="sender"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/receive_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="10dp"
            android:text="message"
            android:textColor="@color/black"
            android:textSize="18sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/receive_message_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="send time"
        android:layout_gravity="bottom"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="5dp"/>
</LinearLayout>

