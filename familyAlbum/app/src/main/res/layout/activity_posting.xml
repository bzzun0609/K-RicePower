<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.PostingActivity">

    <TextView
        android:id="@+id/textview_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진 업로드"
        android:fontFamily="@font/lineseed_kr_bd"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="30dp"/>

    <ImageView
        android:id="@+id/photo_frame"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:src="@drawable/chatting_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_upload"
        app:layout_constraintBottom_toTopOf="@id/btn_upload"
        android:layout_marginTop="40dp"/>

    <ImageView
        android:id="@+id/photo_upload"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="@id/photo_frame"
        app:layout_constraintStart_toStartOf="@id/photo_frame"
        app:layout_constraintEnd_toEndOf="@id/photo_frame"
        android:layout_marginTop="20dp"
        android:src="@drawable/testimg"/>

    <EditText
        android:id="@+id/photo_text"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="여기에 텍스트를 입력하세요."
        app:layout_constraintTop_toBottomOf="@id/photo_upload"
        app:layout_constraintStart_toStartOf="@id/photo_frame"
        app:layout_constraintEnd_toEndOf="@id/photo_frame"
        app:layout_constraintBottom_toBottomOf="@id/photo_frame"/>


    <Button
        android:id="@+id/btn_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="upload"
        android:background="@drawable/chatting_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp" />

</androidx.constraintlayout.widget.ConstraintLayout>