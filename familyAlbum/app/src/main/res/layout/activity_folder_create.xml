<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.FolderCreateActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@id/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>




        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCreateFolder"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="완료"
            android:elevation="5dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/lineseed_kr_rg"
            android:background="@drawable/chatting_bottom"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_albums"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textView8"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="폴더 생성"
        android:textSize="24sp"
        android:textColor="@color/font_darkgray"
        android:fontFamily="@font/lineseed_kr_bd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="우리 가족과 함께한 시간을 폴더로 만들어보세요."
        app:layout_constraintTop_toBottomOf="@id/textview_layout_title"
        app:layout_constraintStart_toStartOf="@id/textview_layout_title"/>

    <LinearLayout
        android:id="@+id/layout_folder_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/textview_layout_title"
        android:layout_marginTop="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/textview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/lineseed_kr_rg"
            android:textColor="@color/black"
            android:text="폴더 이름"/>

        <EditText
            android:id="@+id/editFolderName"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:hint="폴더 이름을 입력하세요"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_folder_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout_folder_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/textview_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/lineseed_kr_rg"
            android:textColor="@color/black"
            android:text="폴더 설명"/>

        <EditText
            android:id="@+id/editFolderDescription"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:hint="ex) 2022.03.04, 동생과 함께" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_folder_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout_folder_description"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/textview_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/lineseed_kr_rg"
            android:text="사진 선택 "/>

        <ImageView
            android:id="@+id/folder_img"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/baseline_add_a_photo_24"/>
    </LinearLayout>


</LinearLayout>